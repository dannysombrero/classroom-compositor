{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  },
  "hosting": {
    "site": "classcast-app",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "emulators": {
    "hub": { "host": "127.0.0.1", "port": 4401 },
    "logging": { "host": "127.0.0.1", "port": 4501 },
    "functions": { "host": "127.0.0.1", "port": 5001 },
    "firestore": { "host": "127.0.0.1", "port": 8080 },
    "hosting": { "host": "127.0.0.1", "port": 5050 },
    "ui": { "enabled": true, "host": "127.0.0.1", "port": 4000 }
  }
}