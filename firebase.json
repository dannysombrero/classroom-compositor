{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  },
  "hosting": {
    "site": "classcast-app",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/**", "function": "appApi" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "emulators": {
    "functions": { "port": 5001 },
    "hosting": { "port": 5002 },
    "firestore": { "port": 8080 },
    "ui": { "enabled": true }
  }
}