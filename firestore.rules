rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Allow the host and viewers to negotiate within a session namespace.
    match /sessions/{sessionId} {
      // Offers & answers singletons
      match /offers/{docId} {
        allow read, write: if true;
      }
      match /answers/{docId} {
        allow read, write: if true;
      }

      // ICE candidate fanouts
      match /candidates_host/{candId} {
        allow read, write: if true;
      }
      match /candidates_viewer/{candId} {
        allow read, write: if true;
      }

      // Optional: code mapping collection if you use it
      match /codes/{codeId} {
        allow read, write: if true;
      }
    }
  }
}