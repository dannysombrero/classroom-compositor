rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Viewer resolves a code to sessionId
    match /codes/{codeId} {
      // allow anyone to read the code document (so join page works)
      allow get: if true;
      // (write restricted in prod; dev-only:)
      allow create, update, delete: if true;
    }

    match /sessions/{sessionId} {
      // Allow reads so viewers can validate session existence
      allow get, list: if true;

      // Host/session mutation (relaxed for dev)
      allow create, update, delete: if true;

      // Offer doc the host publishes
      match /offers/{docId} {
        allow read, write: if true;
      }

      // Answers (viewer writes to a deterministic doc: answers/latest)
      match /answers/{docId} {
        allow read, write: if true;
      }

      // Host ICE candidates (viewer reads)
      match /candidates_host/{candId} {
        allow read, write: if true;
      }

      // Viewer ICE candidates (host reads)
      match /candidates_viewer/{candId} {
        allow read, write: if true;
      }
    }
  }
}
